{
	"name": "previewd",
	"version": "0.0.2",
	"description": "A CLI tool to preview files and directories in the browser, with support for Markdown, LaTeX, and more.",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"test": "node --test",
		"test:unit": "node --test test/index.test.js",
		"test:e2e": "node --test e2e.test.js",
		"format:write": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"keywords": [
		"markdown",
		"LaTeX",
		"pdf",
		"cli",
		"previewd",
		"files",
		"server",
		"browser",
		"http"
	],
	"engines": {
		"node": ">=18"
	},
	"author": "Jihed MASTOURI",
	"license": "MIT",
	"packageManager": "pnpm@10.9.0",
	"bin": {
		"previewd": "index.js"
	},
	"devDependencies": {
		"nodemon": "^3.1.10",
		"prettier": "^3.3.3"
	},
	"dependencies": {
		"@mdit/plugin-mathjax": "^0.23.1",
		"gray-matter": "^4.0.3",
		"highlight.js": "^11.11.1",
		"markdown-it": "^14.1.0",
		"yargs": "^18.0.0"
	}
}
